{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "include": ["src/**/*.ts", "src/app.ts", "server.ts"],
  "exclude": ["node_modules", ".vscode"]
}
